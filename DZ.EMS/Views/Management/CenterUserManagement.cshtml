            queryParams: obj,//, casekey: "yd", wherestr: wherestr
            rownumbers: true,
            pagination: true,
            pageList: [20, 30, 80, 100, 200],
            pageSize: 20, //页大小
            striped: true, //行背景交换
            //border: false,
            // idField: 'Userid', //主键
            fitColumns: true,
            columns: [[
             
                { field: 'Userid', title: '帐号', width: 100 },
                //{ field: 'encode', title: 'encode', width: 100 },
