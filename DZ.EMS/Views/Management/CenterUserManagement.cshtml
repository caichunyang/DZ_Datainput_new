 function LoadDataGridview() {
        var obj = {};
     obj.objid = $("#objcombobox").combobox("getValue");
        obj.userid = $("#useridtext").textbox("getValue");
        
        $("#datagridusermanage").datagrid({
            // url: '/ShowOutPut/GetCenteroutputTJ',
